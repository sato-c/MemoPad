<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New MemoPad</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @memopad.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Subject: </td>
                <td class="itemValue"><input type="text" name="memopad[subject]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Date: </td>
                <td class="itemValue"><input type="text" name="memopad[date]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Body: </td>
                <td class="itemValue"><input type="text" name="memopad[body]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
