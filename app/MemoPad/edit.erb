<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @memopad.subject %></h1>
    <a href="<%= url_for :action => :show, :id => @memopad.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @memopad.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @memopad.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="memopad[subject]" class="fieldLabel">Subject</label>
            <input type="text" id="memopad[subject]" name="memopad[subject]" value="<%= @memopad.subject %>" <%= placeholder( "Subject" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="memopad[date]" class="fieldLabel">Date</label>
            <input type="text" id="memopad[date]" name="memopad[date]" value="<%= @memopad.date %>" <%= placeholder( "Date" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="memopad[body]" class="fieldLabel">Body</label>
            <input type="text" id="memopad[body]" name="memopad[body]" value="<%= @memopad.body %>" <%= placeholder( "Body" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
