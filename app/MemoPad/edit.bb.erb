<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @memopad.object %>
    <h1>Edit <%= @memopad.subject%></h1>
    <%= link_to "Delete", :action => :delete, :id => @memopad.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @memopad.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Subject: </td>
              <td class="itemValue"><input type="text" name="memopad[subject]" value="<%= @memopad.subject %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Date: </td>
              <td class="itemValue"><input type="text" name="memopad[date]" value="<%= @memopad.date %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Body: </td>
              <td class="itemValue"><input type="text" name="memopad[body]" value="<%= @memopad.body %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
